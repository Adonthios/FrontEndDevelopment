<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_top_fragment"
    tools:context="nl.hu.frontenddevelopment.Fragment.ActorDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true"
            android:padding="5dp"
            android:id="@+id/cardview_actor_detail" >
            <ImageView
                android:id="@+id/actor_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="50dp"
                android:paddingLeft="50dp">

                <TextView
                    android:id="@+id/actor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analist"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/titel_size"
                    />

                <TextView
                    android:id="@+id/actor_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    android:maxLines="1"
                    android:text="Analyses the project"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size"
                    />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_actor_edit"
                android:layout_margin="@dimen/fab_margin"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="bottom|end"
                android:scaleType="center"
                app:backgroundTint="@color/colorAccent"
                app:srcCompat="@drawable/ic_edit_white_24dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_actor_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_person_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_person_add_white_24dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>