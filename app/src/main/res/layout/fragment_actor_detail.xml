<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="nl.hu.frontenddevelopment.Fragment.ActorDetailFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:padding="5dp"
        android:id="@+id/cardview_actor"
        >
        <ImageView
            android:id="@+id/actor_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_group_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="50dp"
            android:paddingLeft="50dp">

            <TextView
                android:id="@+id/actor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/titel_size"
                />

            <TextView
                android:id="@+id/actor_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_actor_edit"
                android:layout_margin="@dimen/fab_margin"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="bottom|end"
                android:scaleType="center"
                app:backgroundTint="@color/colorAccent"
                app:srcCompat="@drawable/ic_edit_white_24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_actor_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
